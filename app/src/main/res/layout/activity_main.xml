<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authorization"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.081"
            android:id="@+id/auth_text" android:textSize="34sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="nukem20r@gmail.com"
            android:ems="10"
            android:id="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/auth_text" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordDatabase"
            app:layout_constraintHorizontal_bias="0.507"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:text="2wsxzaq1"
            android:id="@+id/passwordDatabase"
            app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="-170dp"/>
    <Button
            android:text="Authorize"
            android:layout_width="200dp"
            android:layout_height="56dp" android:id="@+id/button_auth"
            android:layout_marginTop="98dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordDatabase" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="90dp" android:onClick="callPost"/>

</androidx.constraintlayout.widget.ConstraintLayout>